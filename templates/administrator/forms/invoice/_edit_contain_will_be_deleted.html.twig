<div id="custom-content" class="white-popup-block white-popup-block-padding">
    <div class="_lightbox-std">
        <div class="content-lightbox">
            <div class="center">
                <h2 class="text-center">{{ 'Edit content'|trans }}</h2>
                {{ form_start(add_contain_form, {'attr' : {'class': 'form-std', 'autocomplete': 'off'}} ) }}
                <fieldset>
                    {#
                    <div class="input-flex">
                        {{ form_row(add_contain_form.name) }}
                    </div>
                    #}

                    <div class="input-flex">
                        {{ form_row(add_contain_form.quantity) }}
                        {#
                        {{ form_row(add_contain_form.price) }}
                        #}

                    </div>
                </fieldset>
                <div class="input-submit text-center">
                    <input type="submit" value="Valider"/>
                </div>
                <input type="hidden" name="invoice_contain_form[user]" value="{{ user.id }}">
                <input type="hidden" name="invoice_contain_form[invoice]" value="{{ invoice.id }}">
                {{ form_end(add_contain_form) }}
            </div>
        </div>
    </div>
</div>